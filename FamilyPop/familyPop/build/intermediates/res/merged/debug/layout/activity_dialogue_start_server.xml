<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_default_background"
    android:weightSum="1">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BIRTHDAY DINNER"
        android:id="@+id/textView11"
        android:textColor="@color/color_default_string"
        android:background="@drawable/background_textbox0"
        android:layout_weight="0.02"
        android:enabled="true"
        android:paddingTop="10dp"
        android:layout_marginBottom="0dp"
        android:layout_above="@+id/imageView29"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/ServerIPText"
        android:layout_weight="0.04"
        android:background="@drawable/background_textbox0"
        android:textColor="@color/color_default_string"
        android:paddingTop="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imageView29"
        android:layout_toRightOf="@+id/button_start_server_topmenu_home" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_start_server_next"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_next_on"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_start_server_topmenu_home"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_home" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_topmenu_setting" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView27"
        android:layout_centerHorizontal="true"
        android:background="@drawable/text_start_a_dialogue"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView28"
        android:background="@drawable/text_name"
        android:layout_above="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView29"
        android:background="@drawable/text_ip_address"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageView28"
        android:layout_marginTop="60dp" />

</RelativeLayout>